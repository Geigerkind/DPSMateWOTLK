<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/
    ..\..\..\FrameXML\UI.xsd">
	
	<Frame name="DPSMate_Details_Interrupts_Total_Row" virtual="true">
		<Size x="595" y="30" />
		<Layers>
			<Layer level="BACKGROUND">
				<Texture name="$parent_Hover" hidden="true">
					<Size x="567" y="25"/>
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset x="7" y="-3" />
						</Anchor>
					</Anchors>
					<Color r="0.95" g="0.9" b="0.5" a="0.5"/>
				</Texture>
			</Layer>
			<Layer level="ARTWORK">
				<FontString name="$parent_Time" inherits="GameFontNormalSmall" justifyH="CENTER">
					<Size x="80" y="30" />
					<Anchors>
						<Anchor point="TOPLEFT" />
					</Anchors>
					<Color r="0.8" g="0.8" b="0.8" a="1" />
				</FontString>
				<FontString name="$parent_CombatTime" inherits="GameFontNormalSmall" justifyH="RIGHT">
					<Size x="60" y="30" />
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset x="80" y="0" />
						</Anchor>
					</Anchors>
					<Color r="0.8" g="0.8" b="0.8" a="1" />
				</FontString>
				<FontString name="$parent_Cause" inherits="GameFontNormalSmall" justifyH="LEFT">
					<Size x="80" y="30" />
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset x="160" y="0" />
						</Anchor>
					</Anchors>
					<Color r="0.8" g="0.8" b="0.8" a="1" />
				</FontString>
				<FontString name="$parent_Target" inherits="GameFontNormalSmall" justifyH="LEFT">
					<Size x="80" y="30" />
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset x="245" y="0" />
						</Anchor>
					</Anchors>
					<Color r="0.8" g="0.8" b="0.8" a="1" />
				</FontString>
				<FontString name="$parent_Ability" inherits="GameFontNormalSmall" justifyH="LEFT">
					<Size x="175" y="30" />
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset x="340" y="0" />
						</Anchor>
					</Anchors>
					<Color r="0.8" g="0.8" b="0.8" a="1" />
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnEnter>
				if this.user then 
				getglobal(this:GetName().."_Hover"):Show()
				DPSMate.Modules.DetailsInterruptsTotal:ShowTooltip(this.user, this, this.id)
				end
			</OnEnter>
			<OnLeave>
				getglobal(this:GetName().."_Hover"):Hide()
				GameTooltip:Hide()
			</OnLeave>
		</Scripts>
	</Frame>
	
	<Frame name="DPSMate_Details_Interrupts_Total" parent="UIParent" movable="true" hidden="true">
		<Size x="600" y="450" />
		<Anchors>
			<Anchor point="RIGHT" />
		</Anchors>
		<Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
			<BackgroundInsets left="6" right="6" top="6" bottom="6" />
			<TileSize val="16" />
			<EdgeSize val="16" />
			<Color r="0.157" g="0.08" b="0.06" a="1" />
		</Backdrop>
		<Layers>
			<Layer level="ARTWORK">
				<FontString name="$parent_Title" inherits="GameFontNormalHuge" justifyH="LEFT" justifyV="CENTER">
					<Size x="900" y="40" />
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset x="20" y="-10" />
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnLoad>
				this:SetClampedToScreen()
				getglobal(this:GetName().."_Title"):SetFont(UNIT_NAME_FONT, 24)
			</OnLoad>
			<OnMouseDown>
				this:StartMoving()
			</OnMouseDown>
			<OnMouseUp>
				this:StopMovingOrSizing()
			</OnMouseUp>
		</Scripts>
		<Frames>
			<Button name="$parent_CloseButton">
				<Size x="30" y="30" />
				<Anchors>
					<Anchor point="TOPRIGHT" relativeTo="$parent" relativePoint="TOPRIGHT">
						<Offset>
							<AbsDimension x="0" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnEnter>
						GameTooltip:SetOwner(this, "ANCHOR_RIGHT")
						GameTooltip:SetText(DPSMate.L["close"], nil, nil, nil, nil, 1)
						GameTooltip:Show()
					</OnEnter>
					<OnLeave>
						GameTooltip:Hide()
					</OnLeave>
					<OnClick>
						DPSMate_Details_Interrupts_Total:Hide()
						PlaySound("igMainMenuOptionCheckBoxOff")
					</OnClick>
				</Scripts>
				<NormalTexture file="Interface\Buttons\UI-Panel-MinimizeButton-Up"/>
				<PushedTexture file="Interface\Buttons\UI-Panel-MinimizeButton-Down"/>
				<HighlightTexture file="Interface\Buttons\UI-Panel-MinimizeButton-Highlight" alphaMode="ADD"/>
			</Button>
			<ScrollFrame name="$parent_LogDetails">
				<Size x="580" y="380" />
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="10" y="-60" />
					</Anchor>
				</Anchors>
				<Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
					<BackgroundInsets left="6" right="6" top="6" bottom="6" />
					<TileSize val="16" />
					<EdgeSize val="16" />
					<Color r="0.157" g="0.08" b="0.06" a="0.5" />
				</Backdrop>
				<Scripts>
					<OnLoad>
						DPSMate.Modules.DetailsInterruptsTotal:CreateGraphTable(this)
						getglobal(this:GetName().."_Time"):SetText(DPSMate.L["time"])
						getglobal(this:GetName().."_CombatTime"):SetText(DPSMate.L["cbt"])
						getglobal(this:GetName().."_Cause"):SetText(DPSMate.L["cause"])
						getglobal(this:GetName().."_Target"):SetText(DPSMate.L["target"])
						getglobal(this:GetName().."_Ability"):SetText(DPSMate.L["ability"])
						this:SetVerticalScroll(0)
					</OnLoad>
					<OnMouseWheel>
						DPSMate.Modules.DetailsInterruptsTotal:ScrollFrameUpdate(arg1)
					</OnMouseWheel>
				</Scripts>
				<HitRectInsets left="0" right="0" top="35" bottom="15"/>
				<Layers>
					<Layer level="ARTWORK">
						<FontString name="$parent_Time" inherits="GameFontNormal" justifyH="LEFT">
							<Size x="70" y="24" />
							<Anchors>
								<Anchor point="TOPLEFT">
									<Offset x="25" y="-10" />
								</Anchor>
							</Anchors>
						</FontString>
						<FontString name="$parent_CombatTime" inherits="GameFontNormal" justifyH="LEFT">
							<Size x="80" y="24" />
							<Anchors>
								<Anchor point="LEFT" relativeTo="$parent_Time" relativePoint="RIGHT">
									<Offset x="-5" y="0" />
								</Anchor>
							</Anchors>
						</FontString>
						<FontString name="$parent_Cause" inherits="GameFontNormal" justifyH="LEFT">
							<Size x="80" y="24" />
							<Anchors>
								<Anchor point="LEFT" relativeTo="$parent_Time" relativePoint="RIGHT">
									<Offset x="75" y="0" />
								</Anchor>
							</Anchors>
						</FontString>
						<FontString name="$parent_Target" inherits="GameFontNormal" justifyH="LEFT">
							<Size x="80" y="24" />
							<Anchors>
								<Anchor point="LEFT" relativeTo="$parent_Time" relativePoint="RIGHT">
									<Offset x="165" y="0" />
								</Anchor>
							</Anchors>
						</FontString>
						<FontString name="$parent_Ability" inherits="GameFontNormal" justifyH="LEFT">
							<Size x="200" y="24" />
							<Anchors>
								<Anchor point="LEFT" relativeTo="$parent_Time" relativePoint="RIGHT">
									<Offset x="255" y="0" />
								</Anchor>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
				<Frames>
					<Frame name="$parent_Row1" inherits="DPSMate_Details_Interrupts_Total_Row">
						<Anchors>
							<Anchor point="TOPLEFT">
								<Offset x="0" y="-35" />
							</Anchor>
						</Anchors>
					</Frame>
					<Frame name="$parent_Row2" inherits="DPSMate_Details_Interrupts_Total_Row">
						<Anchors>
							<Anchor point="TOP" relativeTo="$parent_Row1" relativePoint="BOTTOM" />
						</Anchors>
					</Frame>
					<Frame name="$parent_Row3" inherits="DPSMate_Details_Interrupts_Total_Row">
						<Anchors>
							<Anchor point="TOP" relativeTo="$parent_Row2" relativePoint="BOTTOM" />
						</Anchors>
					</Frame>
					<Frame name="$parent_Row4" inherits="DPSMate_Details_Interrupts_Total_Row">
						<Anchors>
							<Anchor point="TOP" relativeTo="$parent_Row3" relativePoint="BOTTOM" />
						</Anchors>
					</Frame>
					<Frame name="$parent_Row5" inherits="DPSMate_Details_Interrupts_Total_Row">
						<Anchors>
							<Anchor point="TOP" relativeTo="$parent_Row4" relativePoint="BOTTOM" />
						</Anchors>
					</Frame>
					<Frame name="$parent_Row6" inherits="DPSMate_Details_Interrupts_Total_Row">
						<Anchors>
							<Anchor point="TOP" relativeTo="$parent_Row5" relativePoint="BOTTOM" />
						</Anchors>
					</Frame>
					<Frame name="$parent_Row7" inherits="DPSMate_Details_Interrupts_Total_Row">
						<Anchors>
							<Anchor point="TOP" relativeTo="$parent_Row6" relativePoint="BOTTOM" />
						</Anchors>
					</Frame>
					<Frame name="$parent_Row8" inherits="DPSMate_Details_Interrupts_Total_Row">
						<Anchors>
							<Anchor point="TOP" relativeTo="$parent_Row7" relativePoint="BOTTOM" />
						</Anchors>
					</Frame>
					<Frame name="$parent_Row9" inherits="DPSMate_Details_Interrupts_Total_Row">
						<Anchors>
							<Anchor point="TOP" relativeTo="$parent_Row8" relativePoint="BOTTOM" />
						</Anchors>
					</Frame>
					<Frame name="$parent_Row10" inherits="DPSMate_Details_Interrupts_Total_Row">
						<Anchors>
							<Anchor point="TOP" relativeTo="$parent_Row9" relativePoint="BOTTOM" />
						</Anchors>
					</Frame>
					<Frame name="$parent_Row11" inherits="DPSMate_Details_Interrupts_Total_Row">
						<Anchors>
							<Anchor point="TOP" relativeTo="$parent_Row10" relativePoint="BOTTOM" />
						</Anchors>
					</Frame>
				</Frames>
			</ScrollFrame>
		</Frames>
	</Frame>	
</Ui>